<div class = "container">
  <h2 class= "head-line title_h2 text-dark p-1 m-5 rounded-lg border border-dark">会員情報入力</h2>
  <div class = "row">
    <div class = "col-sm-9">
      <%= form_with model: @order,url:confirm_public_orders_path, local: true  do |f| %>
        <h5 class="col-xs-3 sub-head text-strong"><strong>支払い方法</strong></h5>
        <div class = "form-group col-sm-4">
          <%= f.radio_button :payment_method, :"クレジットカード", checked: true %> <span>クレジットカード</span>
        </div>
        <div class = "form-group col-sm-4 ">
          <%= f.radio_button :payment_method, :"銀行振込" %> <span>銀行振込</span>
        </div>
        <h5 class="col-xs-3 sub-head text-strong"><strong>お届け先</strong></h5>
        <div class = "form-group col-sm-12">
          <%= f.radio_button :addresses,  "residence", checked: true  %> <span>ご自身の住所</span><br>
          <%= @member.postal_code %> <%= @member.address %> <br>
          <%= @member.last_name%><%= @member.first_name %>
        </div>
         <% if @addresses != [] %>
        <div class = "form-group col-sm-4">
          <%= f.radio_button :addresses, "address"  %> <span>登録済み住所から選択</span><br>
          <%= f.collection_select :address_id, @addresses, :id, :order_address, { prompt: '選択してください' }, class: 'form-control' %>
        </div>
        <% end %>
        <div class = "form-group col-sm-8">
          <%= f.radio_button :addresses, "new_address" %> <span>新しいお届け先</span><br>
           <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 mr-5 mt-4 control-label" %>
           <%= f.text_field :postal_code, placeholder:"0000000", class: "col-sm-4 form-control-static postal_code" %><br>
           <%= f.label :"住所" ,class: "col-xs-3 mr-5 mt-4 control-label" %>
           <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園区00", class: "col-sm-8 form-control-static address" %><br>
           <%= f.label :"宛名" ,class: "col-xs-3 mr-5 mt-4 control-label" %>
           <%= f.text_field :name, placeholder:"令和道子", class: "col-sm-4 form-control-static name" %>
        </div>
        <div class = "actions col-md-6 text-right col-md-offset-4 mb-5">
          <%= f.submit "確認画面に進む" ,class: "col-xs-2 pull-right btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>