<div class="container mt-5">
  <div class="row">
    <h4 class="text-main">注文履歴一覧</h2>
    <table class="table">
      <thead class= "thead">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order),class: "text-dark" %></u>
          </td>
          <td><%= order.member.last_name %><%= order.member.first_name %></td>
          <td><%= order.order_products.sum(:quantity) %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>


