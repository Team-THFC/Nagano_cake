<din class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="head-line text-left title_h2">配送先登録/一覧</h2>
      <%= form_with model: @address, local: true do |f| %>
      <div class = "addres col-xs-10">
        <div class = "form-group">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
        </div>
        <div class = "form-group">
          <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
        </div>
        <div class = "form-group">
          <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
        </div>
        <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
      </div>
      <% end %>
    </div>
    <% if @addresses.present? %>
      <table class = "table">
        <thead>
          <tr>
            <th class = "header1">郵便番号</th>
            <th class = "header2">住所</th>
            <th class = "header3">宛名</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
          <% addresses.each do |address| %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する",edit_public_address_path(address), class: "glyphicon glyphicon-pencil btn-sm btn-success　m-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</din>