<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
    <table>
    　<div class="form-grop">
        <label for="order-name">購入者</label>
        <%= link_to admin_member_path(@member), class: "btn-link" do %>
          <%= @order.member.last_name %><%= @order.member.first_name %>
        <% end %>
      </div>
      <div class="form-grop">
        <label for="order-datetime">注文日</label>
        <%= @order.created_at %>
      </div>
      <div class="form-grop">
        <label for="order-address">配送先</label>
        <%= @order.postal_code %><%= @order.address %><br>
        <%= @order.name %>
      </div>
      <div class="form-grop">
        <label for="order-pay">支払方法</label>
        <%= @order.payment_method %>
      </div>
      <div class="form-grop">
        <label for="order-status">注文ステータス</label>
        <%= select :status,:name,Order.statuses.keys.to_a %>
        <%= select :status,:name,Order.statuses.values.to_a %>
        <%= link_to "更新", class: "btn btn-success" %>
      </div>
    </table>
  </div>

  <div class="row">
    <div class="col-md-8">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @order_products.each do |order_product| %>
            <td><%= order_product.product.name %></td>
            <td>
              <% @product_price = order_product.tax_out_price * 1.1 %>
              <%= @product_price.floor.to_s(:delimited) %>
            </td>
            <td><%= order_products.quantity %></td>
            <td></td>
            <td><%= order.production_status %></td>
            <td>
              <%= select :production_status,:name,OrderProduct.statuses.keys.to_a %>
              <%= select :production_status,:name,OrderProduct.statuses.values.to_a %>
              <%= link_to "更新", class: "btn btn-success" %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </div>

    <div class="col-md-3">
      <div class="form-grop">
        <%= f.label :"商品合計" %>
        <% @total = @product_price * cart.quantity.to_i %>
        ￥<%= @total.floor.to_s(:delimited) %>
        <!--合計金額の計算-->
        <% @sum += @total  %>
      </div>
      <div class="form-grop">
        <%= f.label :"送料" %>
        <%= @order.shipping_price %> 円
      </div>
      <div class="form-grop">
        <%= f.label :"請求金額合計" %>
        <%= @order.total_payment + @order.shipping_price %>円
      </div>
    </div>
  </div>
</div>
