<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
      <div class="col-xs-12" >
        <table>
          <div class="form-grop">
            <label for="order-name">購入者</label>
            <%= link_to admin_member_path, class: "btn-link" do %>
              <%= @order.member.last_name %><%= @order.member.first_name %>
            <% end %>
          </div>
          <div class="form-grop">
            <label for="order-datetime">注文日</label>
            <%= @order.created_at %>
          </div>
          <div class="form-grop">
            <label for="order-address">配送先</label>
            <%= @order.postal_code %><%= @order.address %><br>
            <%= @order.name %>
          </div>
          <div class="form-grop">
            <label for="order-pay">支払方法</label>
            <%= @order.payment_method %>
          </div>


            <div class="form-grop">
              <label for="order-status">注文ステータス</label>
                <%= select :status,:name,Order.statuses.keys.to_a %>
                <% submit_tag "更新", class: "btn btn-success" %>
            </div>

        </table>
      </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <table class="table table-hover table-bordered table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.product.name %></td>
              <td></td>
              <td><%= order_product.quantity %></td>
              <td><%= order_product.price.to_s(:delimited) %></td>
              <td>
                <%= select :production_status,:name,OrderProduct.production_statuses.keys.to_a %>
                <% submit_tag "更新", class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class="col-xs-3">
      <table class="table">
        <tr>
          <th class="info">商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th class="info">送料</th>
          <td><%= @order.shipping_price %> 円</td>
        </tr>
        <tr>
          <th class="info">請求金額</th>
          <td><%= @order.total_payment + @order.shipping_price %>円</td>
        </tr>
      </table>
    </div>
</div>