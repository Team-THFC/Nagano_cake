<div class = "container">
  <h2 class= "head-line title_h2 text-dark p-1 m-5 rounded-lg border border-dark">注文情報</h2>
  <div class = "row">
    <div class = "col-sm-9">
      <% if @member_cart_products.exists? %>
        <table class = "table table-hover mt-5">
          <thead class="bg-light ">
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody
            <% @order.price = 0  %>
            <% @member_cart_products.each do |cart|  %>
              <tr>
                <td>
                  <%= attachment_image_tag cart.product,:image,:fill,50,50 ,fallback: "no_image.png",size: "50x50" %>
                  <%= cart.product.name %>
                </td>
                <td>
                  <% @product_price = cart.product.tax_out_price * 1.1 %>
                  <%= @product_price.floor.to_s(:delimited)  %>
                </td>
                <td>
                  <%= cart.quantity %>
                </td>
                <td>
                  <% total = @product_price * cart.quantity %>
                  <%= total.floor.to_s(:delimited) %>
                </td>
                  <% @order.price += total  %>
              </tr>
            <% end %>
          </tbody>
        </table>


    </div>
    <div class = "col-xs-3 billing">
      <table class = "table table-hover table-condensed table-bordered">
        <tr>
          <th class="bg-light ">送料</th>
          <td><%= @order.shipping_price %></td>
        </tr>
        <tr>
          <th class="bg-light ">商品合計</th>
          <td>
            <%= @order.price.floor.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th class="bg-light ">請求金額</th>
          <td>
            <% @order.total_payment = @order.shipping_price + @order.price %>
            <%= @order.total_payment.floor.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
    <div class = "col-sm-9">
      <div class = "form-group">
        <h2>支払方法</h2> <h4 class = "mt-3 ml-5"><%= @order.payment_method %></h4>
      </div>
      <div class = "form-group">
        <h2>お届け先</h2>
        <h4 class = "mt-3 ml-5"><%= "〒#{@order.postal_code} #{@order.address}" %></h4><br>
        <h4 class = "ml-5"><%= "#{@order.name}"  %></h4>
      </div>
    </div>
    <div class = "form-group" >
      <%= form_with( model: @order, local: true, url: {action: :create}) do |f| %>

        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :shipping_price %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :total_payment, value: @billing.to_i %>
        <%= f.hidden_field :ship, value: @ship %>
    </div>
    <div class =  "actions col-md-6 text-right col-md-offset-4 mb-5">
        <%= f.submit '完了する',class: "glyphicon glyphicon-zoom-in btn btn-success"%>
      <% end %>
      <%= link_to '登録一覧へ', new_public_order_path(@order) %>

    </div>
    <% end %>
  </div>
</div>