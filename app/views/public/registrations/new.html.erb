<div class="container">
  <div class="row">
    <div class="col-10 offset-2">
      <h2>新規会員登録</h2>
      <%= form_with model: @member, url: member_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <p>(姓)</p><%= f.text_field :first_name , autofocus: true,class: "form-control form-inline "%>
        <p>(名)</p><%= f.text_field :last_name ,class: "form-control form-inline "%>
      </div>

      <div class="field">
        <%= f.label :フリガナ %><br />
        <p>(セイ)</p><%= f.text_field :first_name_kana ,class: "form-control form-inline "%>
        <p>(メイ)</p><%= f.text_field :last_name_kana ,class: "form-control form-inline "%>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email" ,class: "form-control form-inline "%>
      </div>

      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %><br />
        <%= f.text_field :postal_code ,class: "form-control form-inline "%>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address ,class: "form-control form-inline "%>
      </div>

      <div class="field">
        <%= f.label :電話番号（ハイフンなし） %><br />
        <%= f.text_field :phone_number ,class: "form-control form-inline "%>
      </div>

      <div class="field">
        <%= f.label :パスワード（６文字以上） %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mt-3">
        <button class="btn btn-info text-white">新規登録</button>
        <% f.submit %>
      </div>
      <%end %>
      <h3 class="mt-3">既に登録済みの方</h3>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>


