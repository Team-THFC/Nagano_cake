<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h4>商品新規登録</h4>
      <%= form_with model: @product,url:'/admin/products', local:true do |f| %>

        <div class="form-grop">
          <%= f.label :"商品画像" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-grop">
          <%= f.label :"商品名" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.text_field :name, placeholder:'商品名', class:"col-sm-8 form-control-static" %>
        </div>
        <div class="form-grop">
          <%= f.label :"商品説明" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.text_area :explanation, size:"40x5", placeholder:'ここは説明文を記述します', class:"col-sm-8 form-control-static" %>
        </div>
        <div class="form-grop">
          <%= f.label :"ジャンル" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, { prompt: '選択してください' }, class:"col-sm-8 form-control-static" %>
        </div>
        <div class="form-grop">
          <%= f.label :"税抜価格" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.text_field :tax_out_price, placeholder:'1000', class:"col-sm-8 form-control-static" %>円
        </div>
        <div class="form-grop">
          <%= f.label :"販売ステータス" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.radio_button :is_active, "販売中",checked: true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売中止中", {value: :false, style: "display: inline-block;"} %>
        </div>

        <p class="text-center"><%= f.submit '新規登録', class: "button btn btn-success" %></p>


      <% end %>
    </div>
  </div>
</div>
