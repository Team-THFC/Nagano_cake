<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <p id="notice"></p>
    <h4>商品編集</h4>
    <%= form_with model:@product,url:"/admin/products/#{@product.id}", local:true do |f| %>
      <div class="form-grop">
        <%= f.label :"商品画像"%>
        <%= f.attachment_field :image %>
      </div>
      <div class="form-grop">
        <%= f.label :"商品名" %>
        <%= f.text_field :name,class:"col-sm-9 form-control-static" %>
      </div>
      <div class="form-grop">
          <%= f.label :"商品説明" %>
          <%= f.text_area :explanation, size:"40x5",class:"col-sm-8 form-control-static" %>
      </div>
      <div class="form-grop">
        <%= f.label :"ジャンル"%>
        <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, { prompt: '選択してください' }, class:"col-sm-8 form-control-static" %>
      </div>
      <div class="form-grop">
        <%= f.label :"税抜価格" %>
        <%= f.text_field :tax_out_price, class:"col-sm-8 form-control-static" %>円
      </div>
      <div class="form-grop">
        <%= f.label :"販売ステータス" %>
          <%= f.radio_button :is_active, "販売中",checked: true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売中止中", {value: :false, style: "display: inline-block;"} %>
      </div>

      <div class="form-grop">
        <%= f.submit'変更を保存する',class: "btn btn-success" %>
      </div>

     <% end %>

    </div>
  </div>
</div>
