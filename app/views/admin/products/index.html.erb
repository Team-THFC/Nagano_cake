<div class="container">
  <div class="row">
      <h4 class="text-main">商品一覧</h4>
      <div class="col-12">
        <div class="float-right">
          <%= link_to "新規登録", new_admin_product_path, class: "btn-o btn btn" %>
        </div>
      </div>
      <table class="table table-hover table-inverse">
        <thead class ="thead">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td>
              <u><%= link_to product.name,admin_product_path(product.id),class: "text-dark"  %></u>
            </td>
            <td>¥<%= product.tax_out_price.floor.to_s(:delimited)%></td>
            <td><%= product.genre.genre_name%></td>
            <td>
              <% if product.is_active == true %>
                <p><i class="text-warning">販売中</i></p>
              <% else  product.is_active == false %>
                <p><i class="fas fa-bullseye blue">販売中止中</i></p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>

