<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @orders.each do |order| %>
            <td><%= order.created_at %></td>
            <td><%= order.member.last_name.first_name %></td>
            <td><%= order.order_products.quantitiy %></td>
            <td><%= order.status %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
