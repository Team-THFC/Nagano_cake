<din class = "container" >
  <div class = "row" style="margin-bottom: 130px;">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4 class= "text-main">配送先登録/一覧</h4>
      <%= form_with model: @address,url:public_addresses_path, local: true do |f| %>
      <div class = "col-sm-10">
        <div class = "form-group">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.text_field :postal_code, placeholder:"0000000",  class: "col-sm-4 form-control-static postal_code" %>
        </div>
        <div class = "form-group">
          <%= f.label :"住所" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園区00", class: "col-sm-8 form-control-static address" %>
        </div>
        <div class = "form-group">
          <%= f.label :"宛名" ,class: "col-xs-3 mr-5 control-label" %>
          <%= f.text_field :name, placeholder:"令和道子", class: "col-sm-4 form-control-static name" %>
        </div>
        <%= f.submit '新規登録' ,class: "pull-right btn btn-b", style:"text-align: center;" %>
      </div>
      <% end %>
      <% if @member_addresses.exists? %>
      <table class = "table table-hover table-bordered m-5">
        <thead class = "thead">
          <tr>
            <th class = "header1">郵便番号</th>
            <th class = "header2">住所</th>
            <th class = "header3">宛名</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @member_addresses.each do |address| %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-o mr-3 ml-3" %>
                <%= link_to "削除する", public_address_path(address), method: :delete, class: "btn btn-r" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
</din>