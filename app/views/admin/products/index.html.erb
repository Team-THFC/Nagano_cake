<div class="container">
  <div class="row">
    <!--<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">-->
      <p id="notice"></p>
      <h4>商品一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name,admin_product_path(product.id) %></td>
            <td><%= product.tax_out_price %></td>
            <td><%= product.genre_id %></td>
            <td><%= product.is_active %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
