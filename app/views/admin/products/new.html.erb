<div class="container">
  <div class="row">
    <!--<div class="col-md-5">-->
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <p id="notice"></p>
    <h4>商品新規登録</h4>
      <%= form_with model: @product,url:'/admin/products', local:true do |f| %>
        <div class="form-grop">
          <label for="product-image">商品画像</label>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-grop">
          <label for="product-name">商品名</label>
          <%= f.text_field :name, placeholder:'商品名', class:"form-control" %>
        </div>
        <div class="form-grop">
          <label for="product-explanation">商品説明</label>
          <%= f.text_area :explanation, size:"40x5", placeholder:'ここは説明文を記述します',class:"form-control" %>
        </div>
        <div class="form-grop">
          <label for="product-genre">ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, { prompt: '選択してください' }, class: 'form-control' %>
        </div>
        <div class="form-grop">
          <label for="product-price">税抜価格</label>
          <%= f.text_field :tax_out_price, placeholder:'1000', class:"form-control" %>円
        </div>
        <div class="form-grop">
          <label for="product-status">販売ステータス</label>

            <div style="padding-right:20px;">
              <%= f.radio_button :is_active, "販売中",checked: true %>
              <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売中止中", {value: :false, style: "display: inline-block;"} %>
            </div>
        </div>

        <div class="form-grop">
          <%= f.submit'新規登録',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
