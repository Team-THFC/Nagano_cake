<div class="container">
  <div class="row mt-5">
    <div class="col-10 offset-1">
      <h4>マイページ</h4>
      <h5 class="mt-4">登録情報</h5>
      <button class="btn btn-success">
        <%= link_to "編集する", edit_public_member_path(@member),class: "text-white" %>
      </button>
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @member.first_name %><%= @member.last_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @member.first_name_kana %><%= @member.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @member.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @member.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <th>会員情報</th>
            <td><% if @member.is_deleted  %>
            　　<p>退会中</p>
            　　<% else %>
            　　<p>会員</p>
            　　<% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div>
        <h4>配送先</h4>
        <button class="btn btn-primary"><%= link_to "一覧を見る" ,public_addresses_path,class: "text-white" %></button>
      </div>
      <div>
        <h4>注文履歴</h4>
        <button class="btn btn-primary"><%= link_to "一覧を見る", public_orders_path,class: "text-white"%></button>
      </div>
    </div>
  </div>
</div>