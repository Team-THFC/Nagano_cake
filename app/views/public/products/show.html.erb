<div class="container　mt-5">
  <div class="row mt-5">
    <div class="col-3 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|  %>
          <tr>
            <td class="text-center"><%= genre.genre_name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-9 mt-5">
      <div class="">
        <div>
          <%= attachment_image_tag @product,:image  %>
        </div>
        <div><%= @product.name %></div>
        <div><%= @product.explanation %></div>
        <div>
          <% @product_price = @product.tax_out_price * 1.1 %>
          <%= @product_price.floor  %>円（税込）
        </div>
        <%= link_to public_cart_products_path(product_id: @product.id,member_id: current_member.id), method: :post do %>
          <button class="btn btn-info">カートに入れる</button>
        <% end %>
      </div>
    </div>
  </div>
</div>