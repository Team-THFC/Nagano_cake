<div class = "container" style="margin-bottom: 338px;">
  <div class="row">
    <div class="col-10 offset-2">
      <h4 class= "title-q mt-5 ml-3">管理者ログイン</h4>
       <%= form_with model: @admin, url:  admin_session_path,local: true do |f| %>
        <div class="field">
          <%= f.label :"メールアドレス", class: "col-sm-2 control-label mt-3 mb-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class: "col-sm-8 form-control-static" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード", class: "col-sm-2 control-label mb-4" %>
          <%= f.password_field :password, autocomplete: "current-password",  class: "col-sm-8 form-control-static" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions col-xs-6 text-center ">
          <%= f.submit " ログイン ", class: "btn btn-b pull-right btn-lg " %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>

