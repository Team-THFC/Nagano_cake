<div class="container mt-5 " style="margin-bottom:250px;">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-sm-2">
      <div class = "field">
        <p>購入者</p>
      </div><br>
      <div class = "field">
        <p>注文日</p>
      </div><br>
      <div class = "field">
        <p>配送先</p>
      </div><br><br>
      <div class = "field">
        <p>支払方法</p>
      </div><br>
      <div class = "field">
        <p>注文ステータス</p>
      </div><br>
    </div>

    <div class = "col-sm-6">
      <div class = "field">
        <p>
          <%= link_to admin_member_path(@order.member), class: "btn-link text-dark" do %>
          <u><%= @order.member.last_name %><%= @order.member.first_name %></u>
          <% end %>
        </p>
      </div><br>
      <div class = "field">
        <p><%= @order.created_at.strftime('%Y/%m/%d') %></p>
      </div><br>
      <div class = "field">
        <p>
          <%= @order.postal_code %><%= @order.address %><br>
          <%= @order.name %>
        </p>
      </div><br>
      <div class = "field">
        <p><%= @order.payment_method %></p>
      </div><br>
      <%= form_with model: @order,url: admin_order_path, method: :patch, local: true do |f| %>
        <div class = "field">
          <p>
            <%= f.select :status, Order.statuses.keys.to_a %>
            <%= f.submit "更新", class: "btn btn-success btn-sm" %>
          </p>
        </div><br>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <table class="table table-hover table-bordered table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.price = 0  %>
          <% @order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.product.name %></td>
              <td>
                <% @product_price = order_product.product.tax_out_price * 1.1 %>
                ¥<%= @product_price.floor.to_s(:delimited) %>
              </td>
              <td><%= order_product.quantity %></td>
              <td>
                <% @all_price = @product_price * order_product.quantity %>
                ¥<%= @all_price.floor.to_s(:delimited) %>
              </td>
                <% @order.price += @all_price %>
              <td>
                <%= form_with model:[@order,order_product], url: admin_order_order_product_path(@order.id,order_product.id), method: :patch, local: true do |f| %>
                  <%= f.select :production_status, OrderProduct.production_statuses.keys.to_a %>
                  <%= f.submit "更新", class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-3 offset-md-1">
      <table class="table">
        <tr>
          <th class="info">商品合計</th>
          <td>¥<%= @order.price.floor.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="info">送料</th>
          <td>¥<%= @order.shipping_price %></td>
        </tr>
        <tr>
          <th class="info">請求金額</th>
          <td>
            <% @order.total_payment = @order.shipping_price + @order.price %>
            ¥<%= @order.total_payment.floor.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
</div>