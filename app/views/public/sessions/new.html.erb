<div class="container">
  <div class="row">
    <div class="col-10 offset-2">
      <h2>ログイン</h2>
      <p>会員の方はこちらからログイン</p>

      <%= form_with model: @member, url: member_session_path,local: true do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control form-inline "%>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :encrypted_password, autocomplete: "current-password",class: "form-control form-inline " %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

      <div class="actions mt-3">
        <button class="btn btn-primary text-white">ログイン</button>
        <% f.submit %>
      </div>
      <% end %>
      <h3 class="mt-3">会員登録がお済みではない方</h3>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>