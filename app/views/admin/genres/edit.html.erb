<div class="container">
  <div class="row">
      <div class="col-md-5">
        <h4 class="mt-3">ジャンル編集</h4>
        <%= render 'layouts/errors', obj: @genre %>
        <%= form_with model:@genre,url:"/admin/genres/#{@genre.id}", local: true do |f| %>
        <div class="form-grop">
          <label for="ganre-name">ジャンル名</label>
          <%= f.text_field :genre_name %>
