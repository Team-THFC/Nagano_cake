<div class="container　mt-5">
  <div class="row mt-5">
    <div class="col-3 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|  %>
          <tr>
            <td><%= genre.genre_name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-9 mt-5">
      <div class="">
        <h2>商品一覧</h2>（全<%= @products.count  %>件）
        <div>
          <% @products.each do |product|  %>
            <%= attachment_image_tag product,:image  %>
            <%= link_to public_product_path(product) do %>
              <%= product.name %>
            <% end %>
            <%= product.tax_out_price %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>