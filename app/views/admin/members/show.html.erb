<div class = "container" style="margin-bottom: 100px;">
  <h5  class="title-q"><%= @member.last_name %><%= @member.first_name %>さんの会員情報編集</h5>
  <div class = "row mt-4 mb-3">
    <div class = "col-sm-3" >
      <div class = "field">
        <p>顧客ID</p>
      </div><br>
      <div class = "field">
        <p>氏名</p>
      </div><br>
      <div class = "field">
        <p>フリガナ</p>
      </div><br>
      <div class = "field">
        <p>郵便番号</p>
      </div><br>
      <div class = "field">
        <p>住所</p>
      </div><br>
      <div class = "field">
        <p>電話番号</p>
      </div><br>
      <div class = "field">
        <p>メールアドレス</p>
      </div><br>
      <div class = "field">
        <p>会員ステータス</p>
      </div>
    </div>
    <div class = "col-sm-6">
      <div class = "field">
        <p><%= @member.id %></p>
      </div><br>
      <div class = "field">
        <p><%= @member.last_name %> <%= @member.first_name %></p>
      </div><br>
      <div class = "field">
        <p><%= @member.last_name_kana %> <%= @member.first_name_kana %></p>
      </div><br>
      <div class = "field">
        <p><%= @member.postal_code %></p>
      </div><br>
      <div class = "field">
        <p><%= @member.address %></p>
      </div><br>
      <div class = "field">
        <p><%= @member.phone_number %></p>
      </div><br>
      <div class = "field">
        <p><%= @member.email %></p>
      </div><br>
      <div class = "field">
        <% if @member.is_deleted == true %>
          <p><i class= "text-light"></i>退会</p>
        <% elsif @member.is_deleted == false %>
          <p><i class= "text-success">有効</i></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-5 col-md-offset-7 mb-5 mt-2 text-right">
    <%= link_to "編集する",edit_admin_member_path(@member), class: "glyphicon glyphicon-pencil btn btn-o mr-5 ml-2" %>
    <%= link_to "注文履歴一覧を見る", admin_root_url, class: "glyphicon glyphicon-pencil btn btn-b mr-5 ml-5" %>
  </div>
</div>