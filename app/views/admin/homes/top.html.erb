<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @orders.each do |order| %>
            <td>
              <u><%= link_to order.created_at, admin_order_path(order.id),class: "text-dark" %></u>
            </td>
            <td><%= order.member.last_name %><%= order.member.first_name %></td>
            <td><%= order.order_products.quantitiy %></td>
            <td><%= order.status %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>


