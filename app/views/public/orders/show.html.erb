<div class = "container">
  <h2 class= "head-line title_h2 text-dark p-1 m-5 rounded-lg border border-dark">注文履歴詳細</h2>
  <div class = "row">
    <div class = "col-6 offset-1">
      <table class = "table table-bordered table-condensed mt-3">
        <strong>注文情報</strong>
        <tbody>
          <tr>
            <th class="bg-light ">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="bg-light ">配送先</th>
            <td>〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="bg-light ">支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th class="bg-light ">ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class = "col-xs-3 col-xs-offset-1 billing">
      <strong>請求情報</strong>
      <table class = "table table-bordered table-condensed mt-3" >
        <tr>
          <th class="bg-light ">商品合計</th>
          <td>
            <% @all_product = @order.total_payment - @order.shipping_price %>
            <%= @all_product  %>円
          </td>
        </tr>
        <tr>
          <th class="bg-light ">配送料</th>
          <td><%= @order.shipping_price %>円</td>
        </tr>
        <tr>
          <th class="bg-light "><strong>ご請求額</strong></th>
          <td><%= @order.total_payment.floor.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
    <div class = "col-sm-9">
      <strong>注文内容</strong>
      <table class="table table-bordered table-condensed">
        <thead class="bg-light ">
          <tr>
            <th>商品</th>
  	        <th>単価(税込)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td>
                <% unit_price = order_product.product.tax_out_price * 1.1 %>
                <%= unit_price.floor.to_s(:delimited) %>
            </td>
            <td><%= order_product.quantity %></td>
            <td>
                <% all_price = unit_price * order_product.quantity %>
                <%= all_price.floor.to_s(:delimited) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>