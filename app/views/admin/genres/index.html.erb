<div class="container">
  <div class="row">

    <div class="col-md-5  mx-auto">
      <h4 class="text-main">ジャンル一覧・追加</h4>

      <%= render 'layouts/errors', obj: @genre %>

      <%= form_with model: @genre,url:'/admin/genres', local:true do |f| %>
      <div class="form-grop mt-4">
        <label for="ganre-name">ジャンル名</label>
        <%= f.text_field :genre_name %>
        <%= f.submit '新規登録',class: "btn-o btn" %>
      </div>

      <% end %>

      <table class="table table-hover table-inverse mt-4">
        <thead class= "thead">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class: "btn-o btn" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
