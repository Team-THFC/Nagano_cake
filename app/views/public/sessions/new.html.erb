<div class="container" style="margin-bottom: 210px;">
  <div class="row">
    <div class="col-10 offset-2">
      <h4 class= "title-q mt-5 ml-3">ログイン</h4>
      <p class="mt-4">会員の方はこちらからログイン</p>
      <%= form_with model: @member, url: member_session_path,local: true do |f| %>
        <div class="form-group mt-3">
          <%= f.label :メールアドレス ,class:"col-3 "%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "sample@example.com",class: "form-control-static col-5"%>
        </div>

        <div class="form-group mt-3">
          <%= f.label :パスワード,class:"col-3 " %>
          <%= f.password_field :password, autocomplete: "current-password",class: "form-control-static col-5" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

      <div class="actions col-xs-6 text-center ">
        <button class="btn btn-b pull-right btn-lg" >
          <% f.submit %>ログイン
        </button>
      </div>
      <% end %>
      <div>
        <h5 class="mt-3">会員登録がお済みではない方</h5>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>